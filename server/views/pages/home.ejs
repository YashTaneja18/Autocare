<% layout('layouts/main') %>

<!-- ===== Hero Carousel + Tagline ===== -->
<section class="py-4">
  <div class="container">
    <div class="row align-items-start">

      <!-- Carousel -->
      <div class="col-md-7 mb-4 mb-md-0">
        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% products.forEach((p, i) => { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <img src="<%= p.img %>" class="d-block w-100 hero-img"
                     alt="<%= p.name %>"
                     data-name="<%= p.name %>"
                     data-price="<%= p.price %>"
                     data-desc="<%= p.descp %>">
              </div>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- Right side: Tagline + Product Details -->
      <div class="col-md-5 text-md-start text-center">
        <h1 class="display-6 fw-bold mb-3">
          <span class="text-primary">Driven by Quality,</span><br>
          <span class="text-dark">Defined by Service</span>
        </h1>

        <!-- Product Details (filled via JS) -->
        <h3 id="prodName" class="fw-semibold"></h3>
        <h4 id="prodPrice" class="text-success mb-2"></h4>
        <p  id="prodDesc" class="small"></p>
      </div>

    </div>
  </div>
</section>


<!-- ===== Current Offers Strip ===== -->
<section class="bg-light py-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="fw-bold m-0">
        <span class="text-primary">Current</span> <span class="text-dark">Offers</span>
      </h1>
      <div>
        <button class="btn btn-outline-secondary btn-sm me-2" id="prevOffer">&#10094;</button>
        <button class="btn btn-outline-secondary btn-sm" id="nextOffer">&#10095;</button>
      </div>
    </div>
  </div>
   <div class="row g-3">
      <div class="col-6 offer-set"><img src="/images/offer1.png"  class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer2.png" class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer3.png" class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer4.png" class="img-fluid rounded shadow-sm"></div>
    </div>
  </div>
</section>
<link rel="stylesheet" href="/css/home.css">
<script src="/js/home.js"></script>

