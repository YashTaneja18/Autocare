<% layout('layouts/main') %>

<!-- ===== Hero Carousel + Tagline ===== -->
<section class="bg-light py-4">
  <div class="container">
    <div class="row align-items-start">

      <!-- Carousel -->
      <div class="col-md-7 mb-4 mb-md-0">
        <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <% products.forEach((p, i) => { %>
              <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                <img src="<%= p.img %>" class="d-block w-100 hero-img"
                     alt="<%= p.name %>"
                     data-name="<%= p.name %>"
                     data-price="<%= p.price %>"
                     data-desc="<%= p.descp %>">
              </div>
            <% }) %>
          </div>
        </div>
      </div>

    <div class="col-md-5 d-flex flex-column justify-content-between text-md-start text-center" style="min-height: 400px;">
  
  <!-- Tagline at top -->
        <div>
            <h1 class="display-6 fw-bold mb-3">
            <span class="text-primary">Driven by Quality,</span><br>
            <span class="text-dark">Defined by Service</span>
            </h1>
        </div>

        <!-- Product details at bottom -->
        <div>
            <h2 id="prodName" class="fw-semibold"></h2>
            <h3 id="prodPrice" class="text-success mb-2"></h3>
            <h4 id="prodDesc" class="small"></h4>
        </div>

    </div>


    </div>
  </div>
</section>


<!-- ===== Current Offers Strip ===== -->
<section class="bg-light py-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="fw-bold m-0">
        <span class="text-primary">Current</span> <span class="text-dark">Offers</span>
      </h1>
      <div>
        <button class="btn btn-outline-secondary btn-sm me-2" id="prevOffer">&#10094;</button>
        <button class="btn btn-outline-secondary btn-sm" id="nextOffer">&#10095;</button>
      </div>
    </div>
  </div>
   <div class="row g-3">
      <div class="col-6 offer-set"><img src="/images/offer1.png"  class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer2.png" class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer3.png" class="img-fluid rounded shadow-sm"></div>
      <div class="col-6 offer-set"><img src="/images/offer4.png" class="img-fluid rounded shadow-sm"></div>
    </div>
  </div>
</section>
<section class="py-5 bg-light" id="categories">
  <div class="container">

    <h1 class="fw-bold mb-4">
      <span class="text-primary">Search By</span> <span class="text-dark">Categories</span>
    </h1>

    <%- include('../partials/categories') %>

    <% if (categories.length > initialVisible) { %>
      <button id="toggleCategories" class="btn btn-primary mt-4">View More</button>
    <% } %>
  </div>
</section>
<%- include('../partials/footer') %>

<link rel="stylesheet" href="/css/home.css">
<script src="/js/home.js"></script>
<script src="/js/categories.js"></script>

